<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.balysv.materialripple.MaterialRippleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp" >

            <RelativeLayout
                android:id="@+id/ll_status"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:padding="0dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true">

                <LinearLayout
                    android:id="@+id/ll_task"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/red_circle"/>

                <TextView
                    android:id="@+id/tv_status_approval"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="W"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorNormalText" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_name_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="8dp"
                android:singleLine="true"
                android:text="Name Task"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryText"
                android:layout_toRightOf="@+id/ll_status"
                android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/tv_desc_task"
                android:layout_below="@+id/tv_name_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingRight="8dp"
                android:singleLine="true"
                android:text="Desc Task"
                android:textSize="16sp"
                android:textColor="@color/colorSecondaryText"
                android:layout_toRightOf="@+id/ll_status"
                android:layout_toEndOf="@+id/ll_status" />

            <TextView
                android:id="@+id/tv_date_task"
                android:layout_below="@+id/tv_desc_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingRight="8dp"
                android:paddingBottom="8dp"
                android:text="2016/02/16"
                android:textSize="12sp"
                android:textStyle="italic"
                android:layout_toRightOf="@+id/ll_status"
                android:layout_alignBottom="@+id/ll_status"/>

            <View
                android:layout_below="@+id/ll_status"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="0dp"
                android:background="@color/colorDivider"/>

        </RelativeLayout>

    </com.balysv.materialripple.MaterialRippleLayout>

</LinearLayout>
